<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>PostJS</title>

  <script src="https://kit.fontawesome.com/cc38a274b0.js"></script>
  <link rel="stylesheet" href="/css/notes.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="/js/notes.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
    <%- include('top_bar'); %>
    <div class="container">
        
        <h1>Mes notes</h1>
        <br>
        <button type="button" id="addNote" class="btn btn-success">Ajouter une note</button>
        <button type="button" id="addBoard" class="btn btn-primary">Créer un nouveau tableau</button>

        <span class="dropdown"></span>
            <button class="btn btn-info dropdown-toggle float-right" type="button" data-toggle="dropdown" id="addUsers">
                Partager <i class="fas fa-plus-circle"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" id="listUsers">
            </div>
        </span>

        <span class="float-right">
            <select class="form-control" id="listBoards">
                <%
                if(boards) {
                    for(let element of boards) {
                        if(board._id == element._id) {
                            %> <option value="<%= element._id %>" selected><%= element.name %></option> <% 
                        }
                        else {
                            %> <option value="<%= element._id %>"><%= element.name %></option> <% 
                        }
                    }
                }
                %> 
            </select>
        </span>


        <span class="float-right" id="selectBoard">
            <p>Sélectionner un tableau : </p>
        </span>
        
        <br>
        <br>
        <div class="card">
            <div class="card-body">
        <div class="notes">

            <ul>
            </ul>
        </div>
        <br>
        <br>
        

        
        <div id="modal1" class="modal">        
            <div class="modal-content">
                <h1>Choisissez une couleur pour la note</h1>
                <span id="closeModal">✘</span>
                <br>
                <ul id="colorList">                    
                    <li id="colorBlue"></li>
                    <li id="colorGreen"></li>
                    <li id="colorYellow"></li>
                    <li id="colorOrange"></li>
                    <li id="colorRed"></li>
                </ul>
            </div>
        </div>

    </div>

    </div>
    <br>
    <br>
    </div>
    
</body>
</html>
