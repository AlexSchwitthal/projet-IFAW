        <br>
        <div class="notes" style="border:1px solid black">
            <ul>
                <% 
                if(notes) {
                    for(let note of notes) {
                    %>
                    <li>
                        <p contentEditable="true" id="<%= note._id %>"><%= note.text %></p>
                        <button class="deleteNote">âœ˜</button>
                    </li>
                    <%
                    } 
                }
                %>
            </ul>
        </div>
        <br>
        <br>
    </div>
</body>
</html>
