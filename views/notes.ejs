<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Titre de la page</title>

  <script src="https://kit.fontawesome.com/cc38a274b0.js"></script>
  <link rel="stylesheet" href="/css/notes.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="/js/notes.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <%- include('header'); %>
        <h1>Mes notes</h1>
        <br>
        <button type="button" id="addNote" class="btn btn-success">Ajouter une note</button>
        <button type="button" id="addBoard" class="btn btn-primary">Créer un nouveau tableau</button>

        <span class="dropdown">
            <button class="btn btn-info dropdown-toggle float-right" type="button" data-toggle="dropdown" id="addUsers">
                Partager <i class="fas fa-plus-circle"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <%
                for(let user of users) {
                    if(user.login != locals.login) {
                    %> 
                        <div class="dropdown-item" style="margin-right:75px" id="<%= user._id %>">
                            <span><%= user.login %></span>
                            <span class="fas fa-plus float-right" style="margin-top:5px"></span>
                        </div>  
                    <%
                    }
                }
                %> 
            </div>
        </span>

        <span class="float-right">
            <select class="form-control" id="listBoards">
                <%

                if(boards) {
                    for(let board of boards) {
                        %> <option value="<%= board._id %>"><%= board.name %></option> <% 
                    }
                }
                %> 
            </select>
        </span>


        <span class="float-right" id="selectBoard">
            <p>Sélectionner un tableau : </p>
        </span>
        
        <br>
        <br>
        <div class="notes" style="border:1px solid black">
            <ul>
            </ul>
        </div>
        <br>
        <br>
    </div>
</body>
</html>
