<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Titre de la page</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://kit.fontawesome.com/cc38a274b0.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/notes.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/js/notes.js"></script>
</head>

<body>
    <div class="container">
        <%- include('header'); %>
        <h1>Mes notes</h1>
        <br>
        <button type="button" id="addNote" class="btn btn-success">Ajouter une note</button>
        <button type="button" id="addBoard" class="btn btn-primary">Créer un nouveau tableau</button>

        <button type="submit" class="btn btn-info float-right" id="addUsers">
            <i class="fas fa-plus-circle"></i>
        </button>

        <span class="float-right">
            <select class="form-control" id="listBoards">
                <%
                if(boards) {
                    for(let board of boards) {
                        %> <option value="<%= board._id %>"><%= board.name %></option> <% 
                    }
                }
                %> 
            </select>
        </span>


        <span class="float-right" id="selectBoard">
            <p>Sélectionner un tableau : </p>
        </span>
        
        <br>
        <br>
        <div class="notes" style="border:1px solid black">
            <ul>
            </ul>
        </div>
        <br>
        <br>
    </div>
</body>
</html>
